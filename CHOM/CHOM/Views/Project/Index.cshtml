@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section Css{
    <link type="text/css" src="~/Client/css/Project.css" rel="stylesheet" />
}
<!-- Main -->
<div id="main">
    <!-- Main Content -->
    <div id="main-content">
        <!-- Showcase Slider Holder -->
        <div id="showcase-carousel-holder">
            <div id="itemsWrapperLinks">
                <div id="showcase-carousel" class="swiper-container">
                    <div id="itemsWrapper" class="swiper-wrapper webgl-fitthumbs">
                        <div class="swiper-slide trigger-item">
                            <div class="img-mask">
                                <div class="section-image">
                                    <img src="~/Client/dict/images/canhquan/cq1.jpg"
                                         class="item-image grid__item-img" alt="">
                                </div>
                                <img src="~/Client/dict/images/canhquan/cq1.jpg"
                                     class="grid__item-img grid__item-img--large" alt="">
                            </div>
                            <div class="outer content-max-width">
                                <div class="inner">
                                    <div class="slide-date"
                                         style="text-shadow: rgb(0 0 0) 2px 3px 5px;">
                                        <span>2022</span>
                                    </div>

                                    <div class="slide-title-wrapper"
                                         style="text-shadow: rgb(0 0 0) 2px 3px 5px;">
                                        <div class="slide-title trigger-item-link secondary-font"
                                             data-color="#cf837d" data-firstline="View"
                                             data-secondline="Project">
                                            <span>Opulence</span>
                                        </div>
                                        <a class="slide-link" data-type="page-transition"
                                           href="canhquan.html"></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide trigger-item change-header">
                            <div class="img-mask">
                                <div class="section-image">
                                    <img src="~/Client/dict/images/canhquan/cq4.jpg"
                                         class="item-image grid__item-img" alt="">
                                </div>
                                <img src="~/Client/dict/images/canhquan/cq4.jpg"
                                     class="grid__item-img grid__item-img--large" alt="">
                            </div>
                            <div class="outer content-max-width">
                                <div class="inner">
                                    <div class="slide-date"
                                         style="text-shadow: rgb(0 0 0) 2px 3px 5px;">
                                        <span>2022</span>
                                    </div>

                                    <div class="slide-title-wrapper"
                                         style="text-shadow: rgb(0 0 0) 2px 3px 5px;">
                                        <div class="slide-title trigger-item-link secondary-font"
                                             data-color="#343434" data-firstline="View"
                                             data-secondline="Project">
                                            <span>
                                                Tshirt
                                                Factory
                                            </span>
                                        </div>
                                        <a class="slide-link" data-type="page-transition"
                                           href="canhquan.html"></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- Showcase Slider Holder -->

        <div class="number-index-project">
            <div class="line-count-index">
                <div style="display: flex;">
                    <div id="display" class="number-pj-current">1</div>
                </div>
                <div class="number-pj-total">
                    <div>30</div>
                </div>
            </div>
        </div>

    </div>
    <!--/Main Content -->

</div>
<!--/Main -->
<!-- Footer -->
<footer class="hidden">
    <div id="footer-container">

        <div class="button-wrap left disable-drag swiper-prev">
            <div id="btnGiam" class="icon-wrap parallax-wrap">
                <div class="button-icon parallax-element">
                    <i class="fa fa-angle-up"></i>
                </div>
            </div>
            <div id="btnGiam" class="button-text sticky left">
                <span data-hover="Project">
                    Prev
                    Project
                </span>
            </div>

        </div>

        <div class="button-wrap right disable-drag swiper-next">
            <div id="btnTang" class="icon-wrap parallax-wrap">
                <div class="button-icon parallax-element">
                    <i class="fa fa-angle-down"></i>
                </div>
            </div>
            <div id="btnTang" class="button-text sticky right">
                <span data-hover="Project">
                    Next
                    Project
                </span>
            </div>
        </div>

    </div>
</footer>
<!--/Footer -->