@model CHOM.Data.HinhAnh

@{
    ViewData["Title"] = "Tạo hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}

<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    @await Component.InvokeAsync("HeaderAdmin")
    <!-- Page Header Ends-->
    <!-- Page Body Start-->
    <div class="page-body-wrapper">
        <!-- Page Sidebar Start-->
        @await Component.InvokeAsync("SideBar")
        <!-- Page Sidebar Ends-->
        <!-- Page Sidebar Ends-->
        <div class="page-body">
            <div class="container-fluid">
                <div class="page-title">
                    <div class="row">
                    </div>
                </div>
            </div>
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>@ViewBag.Title</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form action="/Admin/Image/Create" enctype="multipart/form-data" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @if (ViewBag.Message != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.Message</div>
                                    }
                                    <div class="form-group">
                                        <label asp-for="IDDuAn" class="control-label"></label>
                                        <select asp-items="@ViewBag.ListProject" asp-for="IDDuAn" class="form-control"></select>
                                        <span asp-validation-for="IDDuAn" class="text-danger"></span>
                                    </div>
                                    <div class="form-group d-flex flex-column">
                                        <label asp-for="FileName" class="control-label"></label>
                                        <input name="uploadFile" multiple type="file" />
                                    </div>
                                    <div class="form-group btn-event mt-5">
                                        <input type="submit" role="button" value="Tạo mới" class="btn cl-btn" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
        </div>
    </div>
</div>

