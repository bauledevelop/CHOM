@model IEnumerable<CHOM.Data.HinhAnh>
@{
    ViewData["Title"] = "Hình ảnh";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}
@section js{
    <script type="text/javascript" src="~/Admin/js/Image/Home.js"></script>
}
<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    @await Component.InvokeAsync("HeaderAdmin")
    <!-- Page Header Ends-->
    <!-- Page Body Start-->
    <div class="page-body-wrapper">
        <!-- Page Sidebar Start-->
        @await Component.InvokeAsync("SideBar")
        <!-- Page Sidebar Ends-->
        <div class="page-body">
            <div class="container-fluid">
                <div class="page-title">
                    <div class="row">
                    </div>
                </div>
            </div>
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="row">
                    <!-- Feature Unable /Disable Order Starts-->
                    <div class="col-sm-12">
                        <div class="card">
                            <div class="card-header pb-0">
                                <h5>@ViewBag.Title</h5>
                                <div class="mt-1"><a href="/Admin/Image/Create" class="btn btn-success btn-sm">Tạo hình ảnh</a></div>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="display" id="basic-2">
                                        <thead>
                                            <tr>
                                                <th>Hình ảnh</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var item in Model)
                                            {
                                                <tr class="btn-@item.ID">
                                                    <td><img src="/fileImages/@item.FileName" /></td>
                                                    <td>
                                                        <a href="/Admin/Image/Edit/@item.ID" class="btn btn-sm btn-warning">Sửa</a>
                                                        <button data-id="@item.ID" class="btn btn-sm btn-danger btn-delete " type="button" data-bs-toggle="modal" data-original-title="test" data-bs-target="#exampleModal">Xóa</button>
                                                    </td>
                                                </tr>
                                            }
                                            
                                           
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xóa hình ảnh</h5>
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">Bạn có muốn xóa hình ảnh này?</div>
            <div class="modal-footer">
                <button class="btn btn-back-hover" type="button" data-bs-dismiss="modal">Quay lại</button>
                <button class="btn btn-danger btn-success-delete" type="button">Đồng ý</button>
            </div>
        </div>
    </div>
</div>



