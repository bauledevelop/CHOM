@model CHOM.Data.MucLuc
@{
    ViewData["Title"] = "Tạo mục lục";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}
<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    @await Component.InvokeAsync("HeaderAdmin")
    <!-- Page Header Ends-->
    <!-- Page Body Start-->
    <div class="page-body-wrapper">
        <!-- Page Sidebar Start-->
        @await Component.InvokeAsync("SideBar")
        <!-- Page Sidebar Ends-->
        <!-- Page Sidebar Ends-->
        <div class="page-body">
            <div class="container-fluid">
                <div class="page-title">
                    <div class="row">
                    </div>
                </div>
            </div>
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>@ViewBag.Title</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="date-picker">
                                    <form action="/Admin/Menu/Create" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        @if (ViewBag.Message != null)
                                        {
                                                <div class="alert alert-danger">@ViewBag.Message</div>
                                        }
                                        <div class="form-group">
                                            <label asp-for="Ten" class="control-label"></label>
                                            <input asp-for="Ten" class="form-control" />
                                            <span asp-validation-for="Ten" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="ThuTu" class="control-label"></label>
                                            <input asp-for="ThuTu" class="form-control" />
                                            <span asp-validation-for="ThuTu" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="IDParent" class="control-label"></label>
                                            <select asp-for="IDParent" asp-items="@ViewBag.ListMenu" class="form-control">
                                            </select>
                                            <span asp-validation-for="IDParent" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="HinhAnh" class="control-label"></label>
                                            <input asp-for="HinhAnh" class="form-control" />
                                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Nam" class="control-label"></label>
                                            <input asp-for="Nam" class="form-control" />
                                            <span asp-validation-for="Nam" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Link" class="control-label"></label>
                                            <input asp-for="Link" class="form-control" />
                                            <span asp-validation-for="Link" class="text-danger"></span>
                                        </div>
                                        <div class="form-group mt-3">
                                            <input type="submit" value="Tạo mới" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="btn btn-success mt-5">
                            <a href="/Admin/Menu" style="color: #ffffff">Quay về danh sách</a>
                        </div>
                    </div>

                    
                </div>
            </div>
            <!-- Container-fluid Ends-->
        </div>
    </div>
</div>

