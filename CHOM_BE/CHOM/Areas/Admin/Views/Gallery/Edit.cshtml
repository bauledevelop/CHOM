@model CHOM.Data.BoSuuTam

@{
    ViewData["Title"] = "Chỉnh sửa bộ sưu tập";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}
@section js{
    <script type="text/javascript" src="~/Admin/js/Gallery/Edit.js"></script>
}
<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    @await Component.InvokeAsync("HeaderAdmin")
    <!-- Page Header Ends-->
    <!-- Page Body Start-->
    <div class="page-body-wrapper">
        <!-- Page Sidebar Start-->
        @await Component.InvokeAsync("SideBar")
        <!-- Page Sidebar Ends-->
        <!-- Page Sidebar Ends-->
        <div class="page-body">
            <div class="container-fluid">
                <div class="page-title">
                    <div class="row">
                    </div>
                </div>
            </div>
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>@ViewBag.Title</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="date-picker">
                                    <form action="/Admin/Gallery/Edit" enctype="multipart/form-data" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        @if (ViewBag.Message != null)
                                        {
                                            <div class="alert alert-danger">@ViewBag.Message</div>
                                        }
                                        <input type="hidden" asp-for="ID" />
                                        <input type="hidden" asp-for="NgayTao"/>
                                        <div class="form-group">
                                            <label asp-for="IDMucLuc" class="control-label"></label>
                                            <select asp-items="@ViewBag.ListMenu" asp-for="IDMucLuc" class="form-control"></select>
                                            <span asp-validation-for="IDMucLuc" class="text-danger"></span>
                                        </div>
                                        <div class="form-group d-flex flex-column">
                                            <label asp-for="HinhAnh" class="control-label"></label>
                                            <input asp-for="HinhAnh" type="hidden" />
                                            <input name="newFile" type="hidden" class="txt-Img" />
                                            <input class="addFile" multiple type="file" />
                                            <div class="alert alert-danger txt-notification w-50 mt-3"></div>
                                            <img class="uploadFile mt-3 img-uploadFile" src="/uploadFiles/@Model.HinhAnh"/>
                                            <button type="button" class="w-25 mt-3 btn btn-outline-dark btn-uploadfile">Tải ảnh</button>
                                        </div>
                                        <div class="form-group mt-3">
                                            <input type="submit" value="Thay đổi" class="btn btn-primary" />
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="btn btn-success mt-5">
                            <a href="/Admin/Gallery" style="color: #ffffff">Quay về danh sách</a>
                        </div>
                    </div>


                </div>
            </div>
            <!-- Container-fluid Ends-->
        </div>
    </div>
</div>


