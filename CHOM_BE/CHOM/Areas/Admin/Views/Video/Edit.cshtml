@model CHOM.Data.Video

@{
    ViewData["Title"] = "Chỉnh sửa Video";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}
@section js{
    <script src="~/Admin/dict/js/scrollbar/simplebar.js"></script>
    <script src="~/Admin/dict/js/scrollbar/custom.js"></script>
    <script src="~/Admin/dict/js/sidebar-menu.js"></script>
    <script src="~/Admin/js/Video/Edit.js"></script>
}
<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    @await Component.InvokeAsync("HeaderAdmin")
    <!-- Page Header Ends-->
    <!-- Page Body Start-->
    <div class="page-body-wrapper">
        <!-- Page Sidebar Start-->
        @await Component.InvokeAsync("SideBar")
        <!-- Page Sidebar Ends-->
        <!-- Page Sidebar Ends-->
        <div class="page-body">
            <div class="container-fluid">
            </div>
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>@ViewBag.Title</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form action="/Admin/Video/Edit" enctype="multipart/form-data" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @if (ViewBag.Message != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.Message</div>
                                    }
                                    <input type="hidden" asp-for="ID" />
                                    <input type="hidden" asp-for="FileName"/>
                                    <div class="form-group row">
                                        <label>Chọn video (Vui lòng chọn video dưới 30MB)</label>
                                        <div class="alert alert-danger txt-notification-gt" style="display: none"></div>
                                        <div class="d-flex">
                                            <label class="btn btn-primary w-25">
                                                Chọn Video&hellip;<input name="newVideo" class="uploadVideo form-control" style="display: none" type="file" />
                                            </label>
                                            <div class="spinner-border text-primary spinner-input spinner-single" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>
                                        <video style="width: 50%;height: auto" class="mt-3 reloadVideo" autoplay muted loop id="myVideo">
                                            <source src="~/contact/@Model.FileName" class="loadingVideo" type="video/mp4">
                                        </video>
                                    </div>
                                    <div class="form-group btn-event mt-5">
                                        <a class="btn btn-back-hover" href="/Admin/Video">Quay về</a>
                                        <input type="submit" role="button" value="Chỉnh sửa" class="btn cl-btn cl-btn-edit" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
        </div>
    </div>
</div>

