@model CHOM.Data.USER
@{
    Layout = null;
}



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LOGIN</title>
    <link rel="icon" href="~/ContentAdmin/img/a7_logo.svg" />
    <!-- Bootstrap core CSS -->
    <link href="~/Admin/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--external css-->
    <link href="~/Admin/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Admin/css/style.css" rel="stylesheet">
    <link href="~/Admin/css/style-responsive.css" rel="stylesheet">
    <link href="~/Admin/css/sb-admin-2.min.css" rel="stylesheet" />
</head>

<body style="margin:0">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0   my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <!-- <div class="col-lg-6 d-none d-lg-block bg-login-image"></div> -->
                            <div class="col-lg-12" style="height: 80vh; display: flex; justify-content: center; flex-direction: column; ">
                                <div class="p-5" style="margin: 0 auto; padding: 20px 50px; border-radius: 5px; background-color: #ffff">
                                    @*  <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">A7 STUDIO</h1>
                                    </div>*@
                                    <a class="sidebar-brand d-flex align-items-center justify-content-center "
                                       style="margin: 1rem;">



                                        <img class=" " style="width:100%; height:5vh; " src="~/ContentAdmin/img/logo-dark.png" alt="">

                                    </a>

                                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))

                                    {
                                        if (ViewBag.LoginStatus != null)

                                        {

                                            if (ViewBag.LoginStatus == 0)

                                            {

                                                <div class="alert alert-danger">Invalid login detail</div>

                                            }

                                        }
                                        <form class="user" style="text-align:start">
                                            <label for="exampleFormControlInput1" class="form-label" style="color:#000000">User</label>
                                            @Html.TextBoxFor(m => m.UserName , new { @class = "form-control", @placeholder = "username" })
                                            <br>
                                            <label for="exampleFormControlTextarea1" class="form-label" style="color:#000000">Password</label>
                                            @Html.PasswordFor(m => m.UserPassword , new { @class = "form-control", @placeholder = "password" })
                                            <br>
                                            <button class="btn btn-login" type="submit" name="name" value="Login">
                                                Login
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Admin/js/sb-admin-2.min.js"></script>

</body>


</html>

