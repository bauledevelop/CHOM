@model CHOM.Data.LienHe

@section js{
    <script src="~/Admin/dict/js/scrollbar/simplebar.js"></script>
    <script src="~/Admin/dict/js/scrollbar/custom.js"></script>
    <script src="~/Admin/dict/js/sidebar-menu.js"></script>
}
@{
    ViewData["Title"] = "Chỉnh sửa liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
    var title = "";
    if (Model.PhuongThuc == "Phone")
    {
        title = Model.PhuongThuc + " (Vui lòng chỉ nhập số và không nhập quá 12 kí tự)";
    }
    else
    {
        title = Model.PhuongThuc + " (Vui lòng không nhập quá 100 kí tự)";
    }
}
<div class="page-wrapper compact-wrapper" id="pageWrapper">
    <!-- Page Header Start-->
    @await Component.InvokeAsync("HeaderAdmin")
    <!-- Page Header Ends-->
    <!-- Page Body Start-->
    <div class="page-body-wrapper">
        <!-- Page Sidebar Start-->
        @await Component.InvokeAsync("SideBar")
        <!-- Page Sidebar Ends-->
        <!-- Page Sidebar Ends-->
        <div class="page-body">
            <div class="container-fluid">
            </div>
            <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>@ViewBag.Title</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <form action="/Admin/SocialMedia/Edit" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    @if (ViewBag.Message != null)
                                    {
                                        <div class="alert alert-danger">@ViewBag.Message</div>
                                    }
                                    <input type="hidden" asp-for="ID" />
                                    <input type="hidden" asp-for="PhuongThuc" />
                                    <div class="form-group">
                                        <label class="control-label">@title</label>
                                        <input asp-for="Ten" class="form-control" />
                                        <span asp-validation-for="Ten" class="text-danger"></span>
                                    </div>
                                    <div class="form-group btn-event mt-5">
                                        <a class="btn btn-back-hover" href="/Admin/SocialMedia">Quay về</a>
                                        <input type="submit" role="button" value="Chỉnh sửa" class="btn cl-btn cl-btn-edit" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
        </div>
    </div>
</div>

