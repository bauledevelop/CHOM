@{
    var listMucluc = (IEnumerable<CHOM.Data.MucLuc>)ViewBag.ListProject;
    var listMenuProject = (IEnumerable<CHOM.Data.DuAn>)ViewBag.ListMenuProject;
}

<header class="fullscreen-menu">
    <div id="header-container">


        <!-- Logo -->
        <div id="logo" class="hide-ball">
            @{
                if (ViewBag.LoaiPage == 1 || ViewBag.Error == "true")
                {
                    <a class="ajax-link" href="/" style="color:black !important">
                        C.H.O.M
                    </a>
                }
                else
                {
                    <a class="ajax-link" href="/">
                        C.H.O.M
                    </a>
                }



            }
        </div>
        <!--/Logo -->
        <!-- Navigation -->
        <nav>
            <div class="nav-height">
                <div class="outer">
                    <div class="inner">
                        @if (listMenuProject != null)
                        {
                            <ul data-breakpoint="10025" class="flexnav">
                                @foreach (var item in listMenuProject)
                                {
                                    <li class="link menu-timeline">
                                        <a href="/Watch/@ViewBag.Menu/@item.ID">
                                            <div class="before-span">
                                                @item.TuaDe
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <ul data-breakpoint="10025" class="flexnav">
                                <li class="link menu-timeline">
                                    <a class="" href="#">
                                        <div class="before-span">
                                            Dự án
                                        </div>
                                    </a>
                                    <ul>
                                        @foreach (var item in listMucluc.Where(x => x.IDParent != 0).OrderBy(x => x.ThuTu))
                                        {
                                            <li>
                                                <a class="ajax-link" href="/Project/@item.ID" data-hover="Click to see">@item.Ten</a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                                <li class="link menu-timeline">
                                    <a href="/Gallery">
                                        <div class="before-span">
                                            Thư viện
                                        </div>
                                    </a>
                                </li>
                                <li class="link menu-timeline">
                                    <a href="/Contact">
                                        <div class="before-span">
                                            Liên hệ
                                        </div>
                                    </a>
                                </li>

                            </ul>
                        }
                    </div>
                </div>
            </div>
        </nav>
        <!--/Navigation -->
        <!-- Menu Burger -->
        <div class="button-wrap right menu burger-lines">

            @if (ViewBag.BackList != null)
            {
                if (ViewBag.BackList == 2)
                {
                    @*<a href="/Project/@ViewBag.BackList">*@
                    <div class="icon-wrap parallax-wrap">
                        <div class="button-icon parallax-element @(ViewBag.TitleIndex != null ? "light-content" : "")">
                            <div id="burger-wrapper">
                                <div id="menu-burger">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="button-text sticky right" style="color: #fff">
                        <span data-hover="Danh sách dự án">Danh sách dự án</span>
                    </div>
                    @*</a>*@

                }
                else
                {
                    @*<a href="/Project/@ViewBag.BackList" >*@
                    <div class="icon-wrap parallax-wrap">
                        <div class="button-icon parallax-element @(ViewBag.TitleIndex != null ? "light-content" : "")">
                            <div id="burger-wrapper">
                                <div id="menu-burger">
                                    <span></span>
                                    <span></span>
                                    <span></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="button-text sticky right">
                        <span data-hover="Danh sách dự án">Danh sách dự án</span>
                    </div>
                    @*</a>*@

                }
            }
            else
            {
                <div class="icon-wrap parallax-wrap">
                    <div class="button-icon parallax-element @(ViewBag.TitleIndex != null ? "light-content" : "")">
                        <div id="burger-wrapper">
                            <div id="menu-burger">
                                <span></span>
                                <span></span>
                                <span></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="button-text sticky right"><span data-hover="Menu">Menu</span></div>
            }
        </div>
        <!--/Menu Burger -->

    </div>
</header>