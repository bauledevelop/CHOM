@model IEnumerable<CHOM.Data.BoSuuTam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section js{
    <script type="text/javascript" src="~/Client/js/Gallery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/js/uikit-icons.min.js"></script>
}
@section css {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- UIkit CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/css/uikit.min.css" />
    <link href="~/Client/dict/css/style-gallery.css" rel="stylesheet" />
    <link href="~/Client/dict/css/main.css" rel="stylesheet" />

}

<!-- Content Scroll -->
<div id="content-scroll" style="position: absolute; top: 12vh;">
    <div class="gallery" id="gallery" uk-lightbox="animation: slide">
        @foreach (var item in Model)
        {
            <div class="gallery-item">
                <div class="content">
                    <a class="uk-inline" href="/uploadFiles/@item.HinhAnh" data-caption="Caption 1">
                        <img src="/uploadFiles/@item.HinhAnh" alt="">
                    </a>
                </div>
            </div>
        }
    </div>

