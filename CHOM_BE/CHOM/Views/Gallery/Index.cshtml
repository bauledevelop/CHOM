@model IEnumerable<CHOM.Data.BoSuuTam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section js{
    
    <script src="~/Client/js/Gallery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/js/uikit-icons.min.js"></script>
}
@section css {
    <!-- UIkit CSS -->
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/css/uikit.min.css" />
    <!-- Custom CSS -->
    <link href="~/Client/dict/css/style.css" rel="stylesheet" />
    <link href="~/Client/dict/css/style-gallery.css" rel="stylesheet" />
    <link href="~/Client/dict/css/main.css" rel="stylesheet" />

    <link href="~/Client/dict/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700"
      rel="stylesheet" />

}

<!-- Content Scroll -->
<div id="content-scroll" style="position: absolute; top: 12vh" @(ViewBag.LoaiPage= 1)>
    <div class="gallery" id="gallery" uk-lightbox="animation: slide">
        @foreach(var item in Model)
        {
            <div class="gallery-item">
                <div class="content">
                    <a class="uk-inline"
                   href="/imageGallery/@item.HinhAnh"
                   data-caption="Caption 1">
                        <img src="/imageGallery/@item.HinhAnh"
                         width="1800"
                         height="1200"
                         alt="" />
                    </a>
                </div>
            </div>
        }
    </div>

    <!-- Footer -->
    <footer class="hidden">
        <div id="footer-container"></div>
    </footer>
    <!--/Footer -->
</div>
<!--/Content Scroll -->

<!-- Footer -->
<footer class="hidden">
    <div id="footer-container"></div>
</footer>
