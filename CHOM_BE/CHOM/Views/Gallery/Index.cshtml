@model IEnumerable<CHOM.Data.BoSuuTam>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@section js{
    
    <script src="~/Client/js/Gallery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/js/uikit-icons.min.js"></script>
}
@section css {
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet" />
    <!-- UIkit CSS -->
    <link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/uikit@3.15.19/dist/css/uikit.min.css" />
    <!-- Custom CSS -->
    <link href="~/Client/dict/css/style.css" rel="stylesheet" />
    <link href="~/Client/dict/css/style-gallery.css" rel="stylesheet" />
    <link href="~/Client/dict/css/main.css" rel="stylesheet" />

    <link href="~/Client/dict/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700"
      rel="stylesheet" />

}

<div id="content-scroll" style="position: absolute; top: 12vh">
    <div class="gal">
        @foreach(var item in Model)
        {
            <img src="~/imageGallery/@item.HinhAnh" alt="Hình ảnh của bộ sưu tầm">
        }
    </div>

</div>

<!-- Footer -->
<footer class="hidden">
    <div id="footer-container"></div>
</footer>
